<h1>Edit Trimester</h1>

<%= form_with(model: @trimester, local: true) do |form| %>
  <% if @trimester.errors.any? %>
    <div style="color: red">
    <h2>Please fix the following <%= pluralize(@trimester.errors.count, "issue") %> before updating:</h2>
      <ul>
        <% @trimester.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :application_deadline %>
    <%= form.date_field :application_deadline %>
  </div>

  <div>
    <%= form.submit "Update Trimester" %>
  </div>
<% end %>
